{
    "info": {
        "name": "fullTextAsString_ST",
        "description": "Set the `fullText` query parameter to a string instead of a boolean, e.g., fullText='notABoolean'",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "v1All",
            "request": {
                "method": "GET",
                "header": [],
                "body": null,
                "cookies": [],
                "url": {
                    "raw": "{{baseUrl}}/v1/all",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "v1",
                        "all"
                    ]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "type": "text/javascript",
                        "exec": [
                            "pm.test('Response status code is 2xx', function () {",
                            "    pm.expect(pm.response.code || pm.response.status).to.be.within(200, 299);",
                            "});",
                            "",
                            "try {",
                            "",
                            "    // Store response headers",
                            "    pm.response.headers.each(function(header) {",
                            "        pm.collectionVariables.set('v1All.response.headers.', header.value);",
                            "    });",
                            "",
                            "    // Store response cookies",
                            "    pm.response.cookies.each(function(cookie) {",
                            "        pm.collectionVariables.set('v1All.response.cookies.', cookie.value);",
                            "    });",
                            "",
                            "    // Store status code",
                            "    pm.collectionVariables.set('v1All.response.status_code', pm.response.code);",
                            "} catch (error) {",
                            "    console.error('Failed to process response:', error.message);",
                            "}"
                        ]
                    }
                },
                {
                    "listen": "prerequest",
                    "script": {
                        "type": "text/javascript",
                        "exec": []
                    }
                }
            ]
        },
        {
            "name": "v2Name",
            "request": {
                "method": "GET",
                "header": [],
                "body": null,
                "cookies": [],
                "url": {
                    "raw": "{{baseUrl}}/v2/name/:name?fields=name,capital,region,population&fullText=notABoolean",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "v2",
                        "name",
                        ":name"
                    ],
                    "variable": [
                        {
                            "key": "name",
                            "value": "Afghanistan"
                        }
                    ],
                    "query": [
                        {
                            "key": "fields",
                            "value": "name,capital,region,population"
                        },
                        {
                            "key": "fullText",
                            "value": "notABoolean"
                        }
                    ]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "type": "text/javascript",
                        "exec": [
                            "pm.test('Response status code is 4xx', function () {",
                            "    pm.expect(pm.response.code || pm.response.status).to.be.within(400, 499);",
                            "});"
                        ]
                    }
                },
                {
                    "listen": "prerequest",
                    "script": {
                        "type": "text/javascript",
                        "exec": [
                            "pm.collectionVariables.set('v2Name.request.path_params.name', 'Afghanistan');",
                            "pm.collectionVariables.set('v2Name.request.query_params.fields', 'name,capital,region,population');",
                            "pm.collectionVariables.set('v2Name.request.query_params.fullText', 'notABoolean');"
                        ]
                    }
                }
            ]
        }
    ],
    "event": [
        {
            "listen": "prerequest",
            "script": {
                "type": "text/javascript",
                "exec": [
                    "pm.environment.set('baseUrl', 'http://localhost:9002/rest');"
                ]
            }
        }
    ]
}