{
    "info": {
        "name": "disallowedRefererDomain_FU",
        "description": "Send a GET request to /version with a Referer header from a disallowed domain, simulating a cross-origin request blocked by business rules enforcing domain restrictions.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "fetchVersionGET",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Referer",
                        "value": "http://disallowed-domain.com"
                    }
                ],
                "body": null,
                "cookies": [],
                "url": {
                    "raw": "{{baseUrl}}/version",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "version"
                    ]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "type": "text/javascript",
                        "exec": [
                            "pm.test('Response status code is 4xx', function () {",
                            "    pm.expect(pm.response.code || pm.response.status).to.be.within(400, 499);",
                            "});"
                        ]
                    }
                },
                {
                    "listen": "prerequest",
                    "script": {
                        "type": "text/javascript",
                        "exec": [
                            "pm.collectionVariables.set('fetchVersionGET.request.headers.Referer', 'http://disallowed-domain.com');"
                        ]
                    }
                }
            ]
        }
    ],
    "event": [
        {
            "listen": "prerequest",
            "script": {
                "type": "text/javascript",
                "exec": [
                    "pm.environment.set('baseUrl', 'http://localhost:9000');"
                ]
            }
        }
    ]
}